@using WebApplication1.Models
@using Microsoft.AspNet.Identity
@model List<Giohang>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}
<h2 style="text-align: center; font-weight:bold; color:red">THÔNG TIN HÀNG HÓA</h2>
<table class="table table-bordered table-condensed">
    <tr style="text-align:center; font-weight:bold; width: 300px;">
        <td> Mã sách </td>
        <td> Tên sách </td>
        <td> Ảnh bìa </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>

    </tr>
    @foreach (var item in Model)
    {
    <tr style="text-align:center; font-weight:bold">
        <td> @item.gh_Masach</td>
        <td> @item.gh_Tensach</td>
        <td><img width="100" src="~/images/@item.gh_anhBia" alt=""></td>
        @using (Html.BeginForm("CapNhatGioHang", "Shop", new { gh_Masach = item.gh_Masach }))
        {
            <td>
                <div class="quantity buttons_added">
                    <input type="number" name="txtSoluong" class="input-text qty text" style="width: 50px; text-align:center" value="@item.gh_soLuong" min="0" step="1">
                </div>
            </td>
            <td>@String.Format("{0:0,0}", item.gh_Dongia)</td>
            <td>@String.Format("{0:0,0}", item.gh_ThanhTien)</td>

        }
    </tr>
    }
    <tr style="font-family:bold; color:blue; text-align:right">
        <td colspan="6">
            @Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "GioHang", "Shop")
        </td>
    </tr>

</table>
<h2 style="text-align: center; font-weight:bold; color:red">THÔNG TIN KHÁCH HÀNG</h2>
@{ 
    ApplicationDbContext applicationDbContext = new ApplicationDbContext();
    var userId = User.Identity.GetUserId();
    var kh = applicationDbContext.khachHangs.FirstOrDefault(c => c.UserId == userId);
}
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height: 40px">
            <td>Họ và tên khách hàng: </td>
            <td style="font-weight: bold">@kh.FullName</td>
        </tr>


        <tr style="height: 40px">
            <td>Địa chỉ: </td>
            <td style="font-weight: bold">@kh.DiachiKH</td>
        </tr>
        <tr style="height: 40px">
            <td>Số điện thoại: </td>
            <td style="font-weight: bold">@kh.DienThoaiKH</td>
        </tr>
        <tr style="height: 40px">
            <td>Ngày giao hàng: </td>
            <td style="font-weight: bold">
            <input type="date" name="Ngaygiao"/>
            </td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td>
                <input type="submit" value="Xác nhận đặt hàng" />
            </td>
        </tr>
    }
</table>
