@model IEnumerable<WebApplication1.Models.Comments>
@{
    Layout = null;
}
<style>
    .avatar {
        vertical-align: middle;
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }
</style>

@foreach (var item in Model)
{
<div class="row-fluid">
   
    <div class="span10">
        <img src="~/Content/images/01.jpg" alt="" class="avatar" >
        <div style="margin-left:70px; margin-top: -46px">
            <h5> <strong></strong>    </h5>
            <br />
            <h5>@item.Message</h5>
        </div>
        <hr />
    </div>
  
</div>

}
