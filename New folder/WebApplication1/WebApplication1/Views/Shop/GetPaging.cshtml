@using PagedList.Mvc

@model PagedList.IPagedList<WebApplication1.Models.Sach>
@helper Truncate(String input, int length)
{
    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}

<div class="span9">

    <div class="well well-small">
        @foreach (var item in Model)
        {
            <div class="row-fluid">
                <div class="span2">
                    <img src="~/images/@item.Anhbia" alt="">
                </div>
                <div class="span6">
                    <h5>@item.TenSach </h5>
                    <p>
                       @Truncate(item.Mota, 50)
                    </p>
                </div>
                <div class="span4 alignR">
                    <form class="form-horizontal qtyFrm">
                        <h3>@String.Format("{0:0,0}", item.price) VND</h3>

                    </form>
                    <br />
                    <div class="btn-group" style="margin-left:-100px">
                        <a href="@Url.Action("ThemGiohang","Shop",new { @gh_Masach = @item.MaSach, @strURl = Request.Url.ToString()})" class="defaultBtn" style=""><span class=" icon-shopping-cart"></span> Thêm vào giỏ hàng</a>
                        <a href="@Url.Action("ChiTietSanPham","Shop", new { id = item.MaSach})" class="shopBtn">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            <hr class="soften">
        }


    </div>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model,page => Url.Action("GetPaging", new { page }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
        { HttpMethod = "GET", UpdateTargetId = "sach_area" }))
</div>


