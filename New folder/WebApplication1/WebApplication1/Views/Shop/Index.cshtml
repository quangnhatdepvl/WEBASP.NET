@model IEnumerable<WebApplication1.Models.Sach>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}


<div class="span9">

    <div class="well np">
        <div id="myCarousel" class="carousel slide homCar">
            <div class="carousel-inner">
                <div class="item active">
                    <img style="width:100%" src="~/images/Kt.jpg" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">

                        <p><span>Sản phẩm chất lượng tốt</span></p>
                    </div>
                </div>
                <div class="item">
                    <img style="width:100%" src="~/images/Kt.jpg" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">

                        <p><span>Uy tín và trách nhiệm</span></p>
                    </div>
                </div>
                <div class="item ">
                    <img style="width:100%" src="~/images/Kt.jpg" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">

                        <p><span>Khách hàng như người thân</span></p>
                    </div>
                </div>
                <div class="item">
                    <img style="width:100%" src="~/images/Kt.jpg" alt="bootstrap templates">
                    <div class="carousel-caption">

                        <p><span>Nhân viên tận tụy với công việc</span></p>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
    <div class="row-fluid">
        <div id="newProductCar" class="carousel slide">
            <h3>SÁCH MỚI NHẤT </h3>
            <div class="carousel-inner">
                <div class="item active">
                    <ul class="thumbnails">

                        @foreach (var item in Model)
                        {
                            <li class="span3">
                                <div class="thumbnail" style="width:200px; height:200px" >
                                    <a class="zoomTool" href="@Url.Action("ChiTietSanPham","Shop", new { id = item.MaSach})"><span class="icon-search"></span> QUICK VIEW</a>

                                    <img src="~/images/@item.Anhbia" style="width:180px;border:1px solid"> 
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="item">
                    <ul class="thumbnails">
                        @foreach (var item in Model)
                        {
                        <li class="span3">
                            <div class="thumbnail" style="width:200px; height:200px">
                                <a class="zoomTool" href="@Url.Action("ChiTietSanPham", "Shop", new { id = item.MaSach })"><span class="icon-search"></span> QUICK VIEW</a>

                                <img src="~/images/@item.Anhbia" style="width:180px;border:1px solid">
                            </div>
                        </li>
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>



    @Html.Action("GiaCao", "Shop")

</div>
