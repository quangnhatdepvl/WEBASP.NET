@model IEnumerable<WebApplication1.Models.Sach>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}


<div class="span9">

    <div class="well np">
        <div id="myCarousel" class="carousel slide homCar">
            <div class="carousel-inner">
                <div class="item active">
                    <img style="width:100%; height:300px" src="~/Content/images/brand1.jpg" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">


                    </div>
                </div>
                <div class="item">
                    <img style="width:100% ;height:300px" src="~/Content/images/brand2.jpg" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">


                    </div>
                </div>
                <div class="item ">
                    <img style="width:100%;height:300px" src="~/Content/images/brand3.png" alt="bootstrap ecommerce templates">
                    <div class="carousel-caption">


                    </div>
                </div>
                <div class="item">
                    <img style="width:100%;height:300px" src="~/Content/images/brand4.png" alt="bootstrap templates">
                    <div class="carousel-caption">

                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row-fluid">
        <div id="newProductCar" class="carousel slide">
            <h3>SÁCH MỚI NHẤT<i class="icon-bar"></i></h3>

            <div class="carousel-inner">
                <div class="item active">
                    <ul class="thumbnails">

                        @foreach (var item in Model)
                        {
                            <li class="span3">
                                <div class="thumbnail" style="width:200px; height:200px">
                                    <a class="zoomTool" href="@Url.Action("ChiTietSanPham","Shop", new { id = item.MaSach})"><span class="icon-search"></span> Xem chi tiết</a>

                                    <img src="~/Content/images/@item.Anhbia" style="width:180px;border:1px solid white">
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="item">
                    <ul class="thumbnails">
                        @foreach (var item in Model)
                        {
                            <li class="span3">
                                <div class="thumbnail" style="width:200px; height:200px">
                                    <a class="zoomTool" href="@Url.Action("ChiTietSanPham", "Shop", new { id = item.MaSach })"><span class="icon-search"></span> Xem chi tiết</a>

                                    <img src="~/Content/images/@item.Anhbia" style="width:180px;border:1px solid white">
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>


    <br />
    @Html.Action("GiaCao", "Shop")

</div>

