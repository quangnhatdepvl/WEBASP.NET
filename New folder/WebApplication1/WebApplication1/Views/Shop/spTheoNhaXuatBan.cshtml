@model IEnumerable<WebApplication1.Models.Sach>
@{
    ViewBag.Title = "spTheoNhaXuatBan";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="span9">

    <!--
    New Products
    -->
    <div class="well well-small">

        <hr class="soften" />
        <div class="row-fluid">
            <div id="newProductCar" class="carousel slide">
                <div class="carousel-inner">
                </div>

            </div>
        </div>
        <div class="row-fluid">

            <ul class="thumbnails">
                @foreach (var item in Model)
                {
                    <li class="span4" style=" margin-left: 0px;">

                        <div class="thumbnail">

                            <a class="zoomTool" href="@Url.Action("ChiTietSanPham","Shop", new { id = item.MaSach})" title="add to cart"><span class="icon-search"></span> XEM CHI TIẾT</a>
                            <a href="@Url.Action("ChiTietSanPham","Shop", new { id = item.MaSach})"><img src="~/images/@item.Anhbia" style="width:200px"></a>
                            <div class="caption cntr">
                                <p>@item.TenSach</p>
                                <p style="color: red"> Giá :<strong>@String.Format("{0:0,0}", item.price) VND</strong></p>
                                <h4><a class="shopBtn" href="@Url.Action("ThemGiohang","Shop",new { @gh_Masach = @item.MaSach, @strURl = Request.Url.ToString()})" title="add to cart"> Add to cart </a></h4>

                                <br class="clr">
                            </div>
                        </div>
                    </li>
                }
            </ul>

        </div>
    </div>
    <!--
    Featured Products
    -->



</div>






