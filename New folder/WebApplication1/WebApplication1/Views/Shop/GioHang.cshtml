@using WebApplication1.Models
@model List<Giohang>
@{

    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}

<div class="row">
    <div class="span12">
        <div class="well well-small">

            <hr class="soften" />

            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>

                        <th>Tên sách</th>
                        <th>Ảnh bìa</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>


                            <td>@item.gh_Tensach </td>



                            @using (Html.BeginForm("CapNhatGioHang", "Shop", new { gh_Masach = item.gh_Masach }))
                            {
                                <td><img width="100" src="~/images/@item.gh_anhBia" alt=""></td>
                                <td>
                                    <div class="quantity buttons_added">
                                        <input type="number" name="txtSoluong" class="input-text qty text" style="width: 50px; text-align:center" value="@item.gh_soLuong" min="0" step="1">
                                    </div>
                                </td>
                                <td>@String.Format("{0:0,0}", item.gh_Dongia)</td>
                                <td>@String.Format("{0:0,0}", item.gh_ThanhTien)</td>
                                <td>@Html.ActionLink("Xóa", "XoaGioHang", new { gh_Masach = item.gh_Masach }, new { @class = "btn btn-outline-success" })</td>
                                <td><button type="submit" class="btn btn-outline-success" style="width: 100px">Cập nhật</button></td>
                            }
                        </tr>
                    }
                    <tr style="font-weight: bold; text-align: center; color:red">
                        <td>Tổng: </td>
                        <td colspan="2"> Số lượng : @ViewBag.Tongsoluong</td>
                        <td colspan="4">Tổng tiền :@String.Format("{0:0,0}", ViewBag.Tongtien) VND</td>
                    </tr>
                    <tr>
                        <td colspan="10" style="font-weight: bold; text-align: right; text-decoration: none">
                            @Html.ActionLink("XÓA GIỎ HÀNG", "XoaTatCaGioHang", null, new { @class = "btn btn-outline-success" })
                        </td>

                    </tr>
                    <tr>
                        <td colspan="10" style="font-weight: bold; text-align: center; text-decoration: none"> @Html.ActionLink("ĐẶT HÀNG", "DatHang", "Shop", new { @class = "shopBtn btn-large" })</td>

                    </tr>

                </tbody>
            </table>                        <a href="@Url.Action("Index","Shop")" class="shopBtn btn-large"><span class="icon-arrow-left"></span>Tiếp tục mua sắm </a>
        </div>
    </div>
</div>

