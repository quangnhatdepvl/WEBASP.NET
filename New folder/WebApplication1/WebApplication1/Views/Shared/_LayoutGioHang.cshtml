<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap styles -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Customize styles -->
    <link href="~/Content/style.css" rel="stylesheet" />

    <!-- font awesome styles -->
    <link href="~/fonts/css/font-awesome-ie7.min.css" rel="stylesheet">
    <link href="~/fonts/css/font-awesome.css" rel="stylesheet">

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/fonts/ico/favicon.ico">
</head>

<body>

    <!--
        Upper Header Section
    -->
    <!--
    Lower Header Section
    -->
    <div class="container">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="topNav">
                <div class="container">
                    <div class="alignR">


                        <a href="@Url.Action("Login","Account")"><span class="icon-user"></span> ĐĂNG NHẬP</a>
                        <a href="@Url.Action("Register","Account")"><span class="icon-edit"></span> ĐĂNG KÝ </a>
                        @Html.Action("GioHangPartial", "Shop")
                    </div>
                </div>
            </div>
        </div>
        <div id="gototop"> </div>
        <header id="header">
            <div class="row">
                <div class="span4">
                    <h1>
                        <a class="logo" href="@Url.Action("Index","Shop")">
                            <span>Twitter Bootstrap ecommerce template</span>
                            <img src="~/images/logo-bootstrap-shoping-cart.png" style="width: 280px" alt="bootstrap sexy shop">
                        </a>
                    </h1>
                </div>
                <form action="#" class="navbar-search pull-left">
                    <input type="text" placeholder="Search" class="search-query span2" style="width:463px; padding:14px 14px; margin: 16px">
                    <button class="icon-search" type="submit" style="padding: 17px 13px; border: 0.5px solid white"> </button>
                </form>

            </div>
        </header>

        <!--
        Navigation Bar Section
        -->
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class=""><a href="@Url.Action("Index","Shop")">TRANG CHỦ</a></li>
                            <li class=""><a href="@Url.Action("DanhSach","Shop")">DANH SÁCH</a></li>
                            <li class=""><a href="@Url.Action("LienHe","Shop")">LIÊN HỆ</a></li>

                        </ul>

                    </div>
                </div>
            </div>
        </div>
        <!--
        Body Section
        -->
        @RenderBody()

        <!--
        Clients
        -->
        <section class="our_client">

            <div class="row">
                <div class="span2">
                    <a href="#"><img alt="" src="~/images/1.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="~/images/2.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="~/images/3.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="~/images/4.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="~/images/5.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="~/images/6.png"></a>
                </div>
            </div>
        </section>

    </div><!-- /container -->

    <div class="copyright">
        <div class="container">
            <p class="pull-right">
                <a href="#"><img src="~/images/maestro.png" alt="payment"></a>
                <a href="#"><img src="~/images/mc.png" alt="payment"></a>
                <a href="#"><img src="~/images/pp.png" alt="payment"></a>
                <a href="#"><img src="~/images/visa.png" alt="payment"></a>
                <a href="#"><img src="~/images/disc.png" alt="payment"></a>
            </p>
            <span>Copyright &copy; 2013<br> bootstrap ecommerce shopping template</span>
        </div>
    </div>
    <a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.easing-1.3.min.js"></script>
    <script src="~/Scripts/jquery.scrollTo-1.4.3.1-min.js"></script>
    <script src="~/Scripts/shop.js"></script>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
</body>
</html>