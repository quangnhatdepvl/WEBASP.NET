@model IEnumerable<WebApplication1.Models.ChiTietDonHang>

@{
    ViewBag.Title = "DonHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminHeader.cshtml";
}

<div class="container" style="max-width: 100%;">
    <br />

    <h3 style="text-align:center">QUẢN LÝ ĐƠN HÀNG</h3>
    <table class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable-buttons_info">

        <tr style="background-color: gray;font-size: 14px">
            <th>
                Mã đơn hàng
            </th>
            <th>
                Ngày đặt hàng
            </th>
            <th>
                Tên khách hàng
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>

            <th>
                Tên sách
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Thành tiền
            </th>

            <th>Thao tác</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td rowspan="3">
                    @item.MaDonHang
                </td>
                <td>
                    @item.DonDatHang.NgayDatHang
                </td>
                <td>
                    @item.DonDatHang.KhachHang.FullName
                </td>
                <td>
                    @item.DonDatHang.KhachHang.DienThoaiKH
                </td>
                <td>
                    @item.DonDatHang.KhachHang.DiachiKH
                </td>
                <td>
                    @item.Sach.TenSach
                </td>
                <td>
                    @item.SoLuong
                </td>
                <td>
                    @item.Sach.price
                </td>
                <td>
                    @item.Price
                </td>
                @using (Html.BeginForm("ConfirmDonDatHang", "Admin", new { area = "Admin" }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="@item.MaDonHang" name="MaDonHang" />


                    <td style="line-height: 3;padding: 0.1rem 0.2rem;">
                        <input type="submit" value="XÁC NHẬN" class="btn btn-xs btn-danger btn-round text-center" style="font-size: 12px;" />


                        <button class="btn btn-xs btn-info btn-round text-center" style="font-size: 12px;">HỦY</button>



                    </td>
                }





            </tr>
        }

    </table>
</div>