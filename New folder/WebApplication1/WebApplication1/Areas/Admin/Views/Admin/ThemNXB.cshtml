@model WebApplication1.Models.NhaXuatBan

@{
    ViewBag.Title = "ThemNXB";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminHeader.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin:1% 2%;">
    <br />

    <h2 style="text-align:center;margin-left:2%; ">THÊM NHÀ XUẤT BẢN</h2>
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Tên nhà xuất bản
        <div class="col-md-10" style="max-width: 100%;border: 0.25px solid black;">
            @Html.EditorFor(model => model.TenNXB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Địa chỉ
        <div class="col-md-10" style="max-width: 100%;border: 0.25px solid black;">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Điện Thoại
        <div class="col-md-10" style="max-width: 100%;border: 0.25px solid black;">
            @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin: 2% 2%;">
        <div class="col-md-offset-10 col-md-20">
            <input type="submit" value="THÊM MỚI" class="btn btn-dark" />
            @Html.ActionLink("TRỞ VỀ", "Sach", null, new { @class = "btn btn-dark" })
        </div>
    </div>
</div>
}


