@model WebApplication1.Models.ChuDeView

@{
    ViewBag.Title = "ThemCD";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminHeader.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin:1% 2%;">
        <br />

        <h2 style="text-align:center;margin-left:2%; ">THÊM CHỦ ĐỀ</h2>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            Tên chủ đề
            <div class="col-md-10" style="max-width: 150%;border: 0.25px solid black;"  >
                @Html.EditorFor(model => model.TenCD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenCD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin: 2% 2%;">
            <div class="col-md-offset-10 col-md-20">
                <input type="submit" value="THÊM MỚI" class="btn btn-dark" />
                @Html.ActionLink("TRỞ VỀ", "Sach", null, new { @class = "btn btn-dark" })
            </div>
        </div>
    </div>
}


